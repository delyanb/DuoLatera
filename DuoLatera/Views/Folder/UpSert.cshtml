@using DuoLatera.Models.ViewModels
@model FolderVM
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Adjust the column size as per your requirement -->
            <div class="card shadow border-0 mt-4">
                <div class="card-header bg-primary bg-gradient ml-0 py-3">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h2 class="text-white py-2">@(Model.Folder.Id != 0 ? "Update Folder" : "Create Folder")</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form method="post" class="row" enctype="multipart/form-data">
                        <input asp-for="@Model.Folder.Id" hidden />
                        <input asp-for="@Model.Folder.CreateDate" hidden/>
                        <div class="row">
                            <div class="col-12">
                                <div class="border p-3">
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="@Model.Folder.Name" type="text" class="form-control border-0 shadow" />
                                        <label class="ms-2">Name</label>
                                        <span asp-validation-for="@Model.Folder.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="@Model.Folder.Description" type="text" class="form-control border-0 shadow" />
                                        <label class="ms-2">Description</label>
                                        <span asp-validation-for="@Model.Folder.Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <select asp-for="@Model.Folder.Access" asp-items="@Model.options" type="text" class="form-select border-0 shadow ">
                                            <option disabled selected>--Select Access Type--</option>
                                        </select>
                                        <label class="ms-2">Access</label>
                                    </div>
                                    <div class="row pt-2">
                                        <div class="col-6 col-md-3">
                                            @if (Model.Folder.Id != 0)
                                            {
                                                <button type="submit" class="btn btn-primary form-control">
                                                    Update
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-primary form-control">
                                                    Create
                                                </button>
                                            }
                                        </div>
                                        <div class="col-6 col-md-3">
                                            <a asp-controller="Folder" asp-action="Index"  class="btn btn-outline-primary form-control">
                                                Back To Folders
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}